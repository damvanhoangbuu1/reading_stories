
<div class="container">
  
<div class="row" style="background-image: url(https://i.pinimg.com/originals/b0/d7/0b/b0d70b3c42783c988d7552e4a47f3003.png)">
  <div class="col-md-4 col-md-offset-8" style="padding: 20px">
    <h2 style="text-align: center">SIGN UP</h2>
    <%= render 'shared/error_messages' %>
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      <br>
      <%= f.submit "Sign up", class: "btn btn-warning", style:"width:20%; margin-left: 40%; margin-bottom: 25px;" %>
    <% end %>
  </div>
  
</div>

</div>
